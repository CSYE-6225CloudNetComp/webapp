[Unit]
Description=CSYE 6225 webapp
ConditionPathExists=/opt/applications/webapp/
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/applications/webapp
ExecStartPre=/bin/bash -c '/bin/test -e /opt/webapp/development.env'
ExecStart=/usr/bin/node /opt/applications/webapp/server.js
Restart=on-failure
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225

[Install]
WantedBy=multi-user.target
